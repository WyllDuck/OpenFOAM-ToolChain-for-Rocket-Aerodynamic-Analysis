FoamFile
{
    version     2.0;
    format      ascii;
    class       volScalarField;
    object      T;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

#include        "include/initialConditions"

dimensions      [0 0 0 1 0 0 0];

internalField   uniform $temperature;

boundaryField
{
    wallPatch
    {
        type            zeroGradient;
    }

    inletPatch
    {
        type            fixedValue;
        value           $internalField;
    }

    outletPatch
    {
        type            advective;
    }

    farFieldPatch
    {
        type            advective;
    }

    symmetryPatch
    {
        type            symmetry; // symmetryPlane might cause problems if the surface is not perfectly flat 
    }
}

// ************************************************************************* //
