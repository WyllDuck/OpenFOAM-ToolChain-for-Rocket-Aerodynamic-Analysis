|   \\  /    A nd           | Website:  www.openfoam.com                      |
|    \\/     M anipulation  |                                                 |
\*---------------------------------------------------------------------------*/

surfaces1
{
    type            surfaces;
    libs            (sampling);
    
    writeControl    writeTime;
    writeInterval   -1;

    surfaceFormat   vtk;
    fields          (p U T rho Ma yPlus wallShearStress);

    // interpolationScheme cellPoint;  //<- default

    surfaces
    {
        planeXZ
        {
            type            patch;
            patches         ("symmetryPatch");
            interpolate     true;
            invariant       true;  // Unaffected by mesh motion
        }
    }
}


