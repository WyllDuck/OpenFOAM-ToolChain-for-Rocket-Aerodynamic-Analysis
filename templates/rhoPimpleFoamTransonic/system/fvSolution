FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    object      fvSolution;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

solvers
{
    p
    {
        solver          PBiCGStab;
        preconditioner  DILU;
        tolerance       1e-15;
        relTol          0.01;
        minIter         1;
    }

    pFinal
    {
        $p;
        tolerance       1e-15;
        relTol          0.1;
    }

    "(rho|U|e|k|omega)"
    {
        solver          smoothSolver;
        smoother        symGaussSeidel;
        tolerance       1e-14;
        relTol          0.01;
        minIter         1;
    }

    "(rho|U|e|k|omega)Final"
    {
        $U;
        tolerance       1e-14;
        relTol          0.1;
    }
}

PIMPLE
{
    momentumPredictor        yes;
    nCorrectors              2;
    nNonOrthogonalCorrectors 1;
    nOuterCorrectors         1;
    
    transonic       yes;    // Transonic flow ON

    pMinFactor      0.02;
    pMaxFactor      4;

    maxCo                   {{ maxCo }};
    rDeltaTSmoothingCoeff   0.1;
    rDeltaTDampingCoeff     1;
    maxDeltaT               1;
}

